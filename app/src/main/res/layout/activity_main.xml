<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvNum"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:text="0"
            android:textSize="30sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TableRow
                android:layout_width="98dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="BorrarTodo"
                    android:text="C" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="BorrrUltimo"
                    android:text="Delete" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bUno"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bDos"
                    android:text="2"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bTres"
                    android:text="3"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="Sumar"
                    android:text="+"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bCuatro"
                    android:text="4"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bCinco"
                    android:text="5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bSeis"
                    android:text="6"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="Restar"
                    android:text="-"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bSiete"
                    android:text="7"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bOcho"
                    android:text="8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bNueve"
                    android:text="9"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonPer"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="Multiplicar"
                    android:text="x"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="bPunto"
                    android:text="."
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorButtons"
                    android:onClick="bCero"
                    android:text="0"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="bIgual"
                    android:text="="
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonSplit"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/colorCharButtons"
                    android:onClick="Dividir"
                    android:text="/"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>